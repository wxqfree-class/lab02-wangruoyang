\item ls命令\\
\label{sec-4-2-10-1}%
\begin{minted}[]{bash}
ls      #查看当前目录的文件列表
ls -a   #查看当前目录所有文件列表
ls -l   #查看当前目录的文件详细信息
ls -la  #查看当前目录所有文件详细信息
ls -ld
ls -R
ls /
ls
\end{minted}
\end{itemize} % ends low level
\end{frame}
